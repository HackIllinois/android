<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.groupmatching.GroupmatchingFragment"
    android:background="@drawable/group_matching_bg" >

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:gravity="center"
        android:text="Team Matching"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/starButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="30dp"
        android:background="@null"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_star_border_white" />

    <TextView
        android:id="@+id/sortTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort:  "
        android:textSize="14sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="@id/titleTextView"
        android:fontFamily="@font/montserrat_semi_bold"
        android:gravity="center"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/group_status_button"
        android:layout_width="170dp"
        android:layout_height="28dp"
        android:text="Group Status"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:background="#3B68A6"
        app:layout_constraintStart_toEndOf="@id/sortTextView"
        app:layout_constraintBottom_toBottomOf="@id/sortTextView"
        android:layout_marginStart="20dp" />

    <Button
        android:id="@+id/skills_button"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:text="Skills"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:background="#3B68A6"
        app:layout_constraintStart_toEndOf="@id/group_status_button"
        app:layout_constraintBottom_toBottomOf="@id/sortTextView"
        android:layout_marginStart="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>