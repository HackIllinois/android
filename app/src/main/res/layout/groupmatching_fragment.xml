<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.groupmatching.GroupmatchingFragment"
    android:background="@drawable/group_matching_bg" >

    <TextView
        android:id="@+id/title_textview_leaderboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:gravity="center"
        android:text="Team Matching"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/star_button_leaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="30dp"
        android:background="@null"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/star_button_white" />

    <TextView
        android:id="@+id/sort_textview_leaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter:  "
        android:textSize="14sp"
        android:paddingBottom="4dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/title_textview_leaderboard"
        app:layout_constraintStart_toStartOf="@id/title_textview_leaderboard"
        android:fontFamily="@font/montserrat_semi_bold"
        android:gravity="center"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/group_status_button_leaderboard"
        android:layout_width="158dp"
        android:layout_height="28dp"
        android:text="Group Status"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_blue_bg"
        app:layout_constraintStart_toEndOf="@+id/sort_textview_leaderboard"
        app:layout_constraintEnd_toStartOf="@id/skills_button_leaderboard"
        app:layout_constraintBottom_toBottomOf="@id/sort_textview_leaderboard"
        />

    <Button
        android:id="@+id/skills_button_leaderboard"
        android:layout_width="73dp"
        android:layout_height="28dp"
        android:text="Skills"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_blue_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/sort_textview_leaderboard"
        android:layout_marginEnd="36dp" />

    <View
        android:id="@+id/white_line_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffffff"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sort_textview_leaderboard" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/team_matching_recyclerview_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/white_line_leaderboard"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="60dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</androidx.constraintlayout.widget.ConstraintLayout>