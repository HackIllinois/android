<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tags"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/dark_fantasy_bg_2024"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileText"
        app:srcCompat="@drawable/ic_logout" />

    <TextView
        android:id="@+id/profileText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="start"
        android:text="@string/profile"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineTop" />

    <TextView
        android:id="@+id/cardBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/profile_card_bg"
        app:layout_constraintBottom_toBottomOf="@id/guidelineBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineMiddle" />

    <ImageView
        android:id="@+id/leftProfileLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/avatarImageView"
        app:layout_constraintTop_toTopOf="@id/cardBackground"
        app:srcCompat="@drawable/profile_left_symbol" />

    <ImageView
        android:id="@+id/rightProfileLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/avatarImageView"
        app:layout_constraintTop_toTopOf="@id/cardBackground"
        app:srcCompat="@drawable/profile_right_symbol" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/burntBark"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@id/cardBackground"
        app:layout_constraintStart_toStartOf="@id/cardBackground"
        app:layout_constraintTop_toBottomOf="@id/avatarImageView"
        tools:text="Hackaroni Steve" />

    <TextView
        android:id="@+id/attendeeTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_pink_bg"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:maxLines="1"
        android:paddingHorizontal="10dp"
        android:paddingVertical="3dp"
        android:textColor="@color/transparentWhite"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/waveText"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        tools:text="General" />

    <TextView
        android:id="@+id/waveText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_pink_bg"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:maxLines="1"
        android:paddingHorizontal="10dp"
        android:paddingVertical="3dp"
        android:textColor="@color/transparentWhite"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/attendeeTypeText"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        tools:text="Wave 1" />

    <FrameLayout
        android:id="@+id/qrCodeImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/default_qr_image"
        app:layout_constraintBottom_toBottomOf="@+id/cardBackground"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/cardBackground"
        app:layout_constraintStart_toStartOf="@id/cardBackground"
        app:layout_constraintTop_toBottomOf="@+id/waveText"
        app:layout_constraintVertical_bias="0.0">

        <include
            layout="@layout/profile_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <!--    need to not hardcode width and height   -->
    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="@id/guidelineMiddle"
        app:layout_constraintEnd_toEndOf="@id/cardBackground"
        app:layout_constraintStart_toStartOf="@id/cardBackground"
        app:layout_constraintTop_toTopOf="@id/guidelineMiddle"
        tools:srcCompat="@drawable/default_avatar_image" />


    <!--    is there a better way than hardcoding width?   -->
    <ImageView
        android:id="@+id/bannerImageView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/profile_placement_banner"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/cardBackground"
        app:layout_constraintEnd_toEndOf="@id/cardBackground"
        app:layout_constraintStart_toStartOf="@id/cardBackground" />

    <TextView
        android:id="@+id/rankingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/your_ranking"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/bannerImageView"
        app:layout_constraintStart_toStartOf="@id/bannerImageView"
        app:layout_constraintTop_toTopOf="@id/bannerImageView" />

    <ImageView
        android:id="@+id/rankingImageView"
        android:layout_width="30dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/rankingPlacementTextView"
        app:layout_constraintEnd_toStartOf="@+id/rankingPlacementTextView"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/bannerImageView"
        app:layout_constraintTop_toTopOf="@id/rankingPlacementTextView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/profile_ranking_symbol" />

    <TextView
        android:id="@+id/rankingPlacementTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/bannerImageView"
        app:layout_constraintStart_toEndOf="@+id/rankingImageView"
        app:layout_constraintTop_toBottomOf="@id/rankingTextView"
        tools:text="25" />

</androidx.constraintlayout.widget.ConstraintLayout>