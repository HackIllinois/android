    <TextView
        android:id="@+id/successTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TEXT"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".8"
        android:textSize="36sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/scannerEventTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="event name"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/successTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".1"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/scannerEventAttributesView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="event attributes"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/scannerEventTitleView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".1"
        android:textSize="18sp"
        />

    <ImageButton
        android:id="@+id/qrScannerClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_close_dark" />



