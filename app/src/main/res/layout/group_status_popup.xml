<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:background="#3B68A6" >

    <LinearLayout
        android:id="@+id/looking_for_team_linearlayout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/looking_for_team_imageview"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/filled_square"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Looking for Team"
            android:textColor="#ffffff"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/team_looking_for_members_linearlayout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/team_looking_for_members_imageview"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/filled_square"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:text="Team Looking for Members"
            android:textColor="#ffffff"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>