<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="390dp"
        android:layout_height="497dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pointBlock"
            android:layout_width="185dp"
            android:layout_height="115dp"
            android:translationZ="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileCircle"
            app:layout_constraintVertical_bias="0.705"
            app:srcCompat="@drawable/point_block" />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2.5"
            android:scaleY="2.5"
            android:translationZ="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/profileCircle"
            app:layout_constraintEnd_toEndOf="@+id/profileCircle"
            app:layout_constraintStart_toStartOf="@+id/profileCircle"
            app:layout_constraintTop_toTopOf="@+id/profileCircle"
            app:srcCompat="@drawable/big_cake_tiers" />

        <ImageView
            android:id="@+id/profileCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2.5"
            android:scaleY="2.5"
            android:translationZ="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/profileBlockBackground"
            app:layout_constraintEnd_toEndOf="@+id/profileBlockBackground"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="@+id/profileBlockBackground"
            app:layout_constraintTop_toTopOf="@+id/profileBlockBackground"
            app:layout_constraintVertical_bias="0.216"
            app:srcCompat="@drawable/ellipse_profile" />

        <ImageView
            android:id="@+id/profileBlockBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2.5"
            android:scaleY="2.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fog_profile_block" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center"
            android:maxLines="3"
            android:text="Attendee Name"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/pointBlock"
            app:layout_constraintEnd_toEndOf="@+id/profileBlockBackground"
            app:layout_constraintStart_toStartOf="@+id/profileBlockBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.176" />

        <TextView
            android:id="@+id/pointsLabelText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="Current Tier"
            android:textColor="#000000"
            android:textSize="14sp"
            android:translationZ="2dp"
            app:layout_constraintBottom_toTopOf="@+id/pointsText"
            app:layout_constraintEnd_toEndOf="@+id/pointsText"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="@+id/pointsText"
            app:layout_constraintTop_toBottomOf="@+id/profileCircle"
            app:layout_constraintVertical_bias="0.923" />

        <TextView
            android:id="@+id/pointsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Total Points"
            android:textColor="#000000"
            android:textSize="18sp"
            android:translationZ="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/pointBlock"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="@+id/pointBlock"
            app:layout_constraintTop_toTopOf="@+id/pointBlock"
            app:layout_constraintVertical_bias="0.441" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/profileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:gravity="center"
        android:maxLines="3"
        android:text="Profile"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/logoutButton"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="24dp"
        android:background="@null"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:scaleX="3"
        android:scaleY="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logout_button"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>