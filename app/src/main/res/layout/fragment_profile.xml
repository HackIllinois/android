<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profilePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg">

    <TextView
        android:id="@+id/profileText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="34dp"
        android:layout_marginTop="60dp"
        android:textSize="24sp"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:text="@string/profile" />

    <ImageButton
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@id/profileText"
        app:srcCompat="@drawable/ic_logout"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="30dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profileConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/profile_card_bg"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileText">

        <TextView
            android:id="@id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#1D2644"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Raghav Saini" />

        <LinearLayout
            android:id="@+id/tierPointsLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameText">

            <TextView
                android:id="@id/ptsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white_bg"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:textColor="#1D2644"
                android:textSize="12sp"
                tools:text="1000 pts" />

            <TextView
                android:id="@+id/tierText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_white_bg"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:textColor="#1D2644"
                android:textSize="12sp"
                tools:text="Corndog Tier" />

        </LinearLayout>

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="120dp"
            android:scaleType="centerInside"
            android:src="@drawable/hack_10th_ticket"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tierPointsLinearLayout" />

        <TextView
            android:id="@+id/dietRestrictionsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="@string/diet_restrictions"
            android:textColor="#1D2644"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/dietLinearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileImage"
            app:layout_constraintVertical_chainStyle="packed" />

        <LinearLayout
            android:id="@+id/dietLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dietRestrictionsText">


            <TextView
                android:id="@+id/vegetarianText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_teal_bg"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:text="@string/vegetarian"
                android:textColor="#1D2644"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/dairyFreeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_white_bg"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:text="@string/dairy_free"
                android:textColor="#1D2644"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/nutAllergyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_orange_yellow_bg"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:text="@string/nut_allergy"
                android:textColor="#1D2644"
                android:textSize="12sp" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>