<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F6FF">

    <LinearLayout
        android:id="@+id/badge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/qr"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"
            app:srcCompat="@android:color/white"
            tools:srcCompat="@color/colorPrimary" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:textAllCaps="true"
            android:textColor="#1F84A5"
            android:textSize="16sp"
            app:fontFamily="@font/montserrat_semi_bold"
            tools:text="BRIAN STRAUCH" />

        <TextView
            android:id="@+id/dietaryRestrictions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="#1F84A5"
            android:textSize="12sp"
            app:fontFamily="@font/montserrat_regular"
            tools:text="NO DIETARY RESTRICTIONS" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/information"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/badge">

        <TextView
            android:id="@+id/universityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/profile_university_text"
            android:textColor="#1F84A5"
            android:textSize="14sp"
            app:fontFamily="@font/montserrat_semi_bold" />

        <TextView
            android:id="@+id/university"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:textColor="#005776"
            android:textSize="12sp"
            app:fontFamily="@font/montserrat_regular"
            tools:text="University of Illinois at Urbana-Champaign" />

        <TextView
            android:id="@+id/majorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/profile_major_text"
            android:textColor="#1F84A5"
            app:fontFamily="@font/montserrat_semi_bold" />

        <TextView
            android:id="@+id/major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:textColor="#005776"
            android:textSize="12sp"
            app:fontFamily="@font/montserrat_regular"
            tools:text="Computer Science" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
